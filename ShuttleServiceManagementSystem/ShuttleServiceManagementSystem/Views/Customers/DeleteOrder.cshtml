@model ShuttleServiceManagementSystem.Models.OrderDetailsViewModel

@{
    ViewBag.Title = "Delete Order";
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete this order?</h3>
<div>
    <h4>Order Number: @Model.OrderNumber</h4>
    <hr />

    @if (ViewBag.Deletable == true)
    {
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.OrderDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.OrderDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DepartureDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DepartureDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DepartureAddress)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DepartureAddress)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DepartureCity)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DepartureCity)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DepartureState)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DepartureState)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DepartureZipCode)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DepartureZipCode)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DestinationName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DestinationName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.NumberOfPassengers)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NumberOfPassengers)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.FlightDetails)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FlightDetails)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Comments)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Comments)
            </dd>

        </dl>

        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
            </div>
        }
    }
    else
    {
        <font color="red">This order can't be deleted because the departure date/time is less than 24 hours away.</font>
        <br />
        <br />
    }

    @Html.ActionLink("Order List", "ViewCurrentOrders")
</div>
