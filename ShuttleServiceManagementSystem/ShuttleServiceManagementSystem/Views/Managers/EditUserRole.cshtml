@model ShuttleServiceManagementSystem.Models.EditUserRoleViewModel

@{
    ViewBag.Title = "Edit User Role";
}

<h2>@ViewBag.Title - <b>@ViewBag.UserName</b></h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Choose a new role for this user.</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.userRoleID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.userRoleID, ViewBag.USER_ROLE as SelectList)
                @Html.ValidationMessageFor(model => model.userRoleID)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit Changes" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Account List", "ManageUserAccounts") | 
    @Html.ActionLink("Manager Home", "Home", "Managers")
</div>
