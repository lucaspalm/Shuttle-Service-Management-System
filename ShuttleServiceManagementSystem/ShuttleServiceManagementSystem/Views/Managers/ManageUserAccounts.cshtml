@model IEnumerable<ShuttleServiceManagementSystem.Models.ManageUserAccountsViewModel>

@{
    ViewBag.Title = "Manage User Accounts";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.userName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.userRole)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.userName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.userRole)
        </td>
        <td>
            @Html.ActionLink("Edit User Role", "EditUserRole", new {  userID=item.userID  }) |
            @Html.ActionLink("View Account Activity", "ViewAccountActivity", new { userID = item.userID })
        </td>
    </tr>
}

</table>
